{% extends 'layout.html.twig' %}

{% block body %}
    <form method="post" action="">
        <table align="center">
            {% if loginError %}
                <tr>
                    <td colspan="2">Login Failed!</td>
                </tr>
            {% endif %}
            <tr>
                <th>Username:</th>
                <td><input name="user" type="text" /></td>
            </tr>
            <tr>
                <th>Password:</th>
                <td><input name="pass" type="password" /></td>
            </tr>
            <tr>
                <th></th>
                <td><input type="submit" value="Login" /></td>
            </tr>
        </table>
    </form>
{% endblock %}
